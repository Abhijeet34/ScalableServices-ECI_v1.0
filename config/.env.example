# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=eci
POSTGRES_USER=eci
POSTGRES_PASSWORD=eci

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Configuration
JWT_SECRET=change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
# Optional: Dashboard users (JSON or file); passwords can be plaintext or bcrypt hashes ($2b$...)
# Example JSON: {"admin":{"password":"admin123","role":"admin","name":"Administrator"},"guest":{"password":"guest123","role":"guest","name":"Guest User"}}
# DASHBOARD_USERS_JSON=
# DASHBOARD_USERS_FILE=/path/to/users.json

# Service Configuration
SERVICE_VERSION=1.0.0
ENABLE_METRICS=true
ENABLE_TRACING=true
# Build metadata (optional but recommended)
RELEASE_ID=unknown

# Dashboard Monitoring Configuration (optional overrides)
# HTTP client timeout (seconds) when dashboard checks service health
DASHBOARD_HTTP_TIMEOUT_SEC=3.0
# WebSocket push/poll interval for dashboard updates (seconds)
DASHBOARD_POLL_INTERVAL_SEC=2.0
# Backoff configuration for failing services
DASHBOARD_BACKOFF_FACTOR=2.0
DASHBOARD_BACKOFF_MAX_SEC=30.0
DASHBOARD_BACKOFF_JITTER_MS=250
# Service URLs (override defaults if needed)
CUSTOMERS_SERVICE_URL=http://customers:8000
PRODUCTS_SERVICE_URL=http://products:8000
INVENTORY_SERVICE_URL=http://inventory:8000
ORDERS_SERVICE_URL=http://orders:8000
PAYMENTS_SERVICE_URL=http://payments:8000
SHIPMENTS_SERVICE_URL=http://shipments:8000
GATEWAY_SERVICE_URL=http://gateway:8000
# Alternatively provide all via a single JSON string (takes precedence if set)
# DASHBOARD_SERVICES_JSON={"customers":"http://customers:8000","products":"http://products:8000","inventory":"http://inventory:8000","orders":"http://orders:8000","payments":"http://payments:8000","shipments":"http://shipments:8000","gateway":"http://gateway:8000"}
